{
    "name": "pad-app-development",
    "displayName": "PAD-app-development",
    "description": "The PAD app scripting language",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.46.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "pad",
                "aliases": [
                    "PADlang",
                    "pad"
                ],
                "extensions": [
                    ".pjs"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "pad",
                "scopeName": "source.pad",
                "path": "./syntaxes/pad.tmLanguage.json"
            }
        ]
    }
}
